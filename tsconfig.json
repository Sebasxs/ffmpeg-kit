{
   "compilerOptions": {
      // "allowImportingTsExtensions": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "noEmit": true,
      "outDir": "dist",
      "declarationDir": "dist",
      "paths": {
         "@/*": ["*"]
      },
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "ES2022"
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
